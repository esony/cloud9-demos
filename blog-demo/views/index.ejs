<% include ./partials/header %>

<div class ="ui main text container">
    
<div class="ui huge header">Blog posts</div>
<div class="ui top attached segment">
    <div class="ui divided items">
        <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <img class ="ui centered rounded image" src= "<%=blog.image%>" >
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
                    <div class="meta">
                        <span><strong><%= blog.created.toDateString() %></strong></span>
                    </div>
                    <div class="description">
                        <p><%-blog.body.substring(0,100)%> ...</p>
                    </div>
                        <a class = "ui positive mini button" href="/blogs/<%=blog._id%>">Read More <i class="right circle chevron large icon" style="position: relative; bottom: 1px;"></i></a>
                </div>
            </div>
        <% }) %>
    </div>
</div>
</div>

<% include ./partials/footer %>