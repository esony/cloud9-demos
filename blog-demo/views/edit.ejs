<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>

    <form class="ui form container" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Text content</label>
            <textarea name="blog[body]" placeholder="Write your blog post here..."><%-blog.body%></textarea>
        </div>
        <div class="field">
            <button class="ui green button" type="submit">Submit</button>
        </div>
        
    </form>
</div>



<% include ./partials/footer %>